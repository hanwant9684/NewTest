# Telegram Bot Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to GitHub!

# Required - Telegram API Credentials
# Get from: https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Required - Bot Token
# Get from: @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Required - Bot Username (without @)
BOT_USERNAME=your_bot_username

# Required - Your Telegram User ID (Owner)
# Get from: @userinfobot on Telegram
OWNER_ID=your_telegram_user_id

# Optional - Force Subscribe Channel
# Format: @channel_username or channel_id
FORCE_SUBSCRIBE_CHANNEL=

# Optional - Dump Channel ID for monitoring downloads
# Format: -1001234567890 (leave empty to disable)
DUMP_CHANNEL_ID=

# Optional - Payment Configuration
ADMIN_USERNAME=your_telegram_username
PAYPAL_URL=https://paypal.me/yourusername
UPI_ID=yourname@upi
TELEGRAM_TON=your_ton_address
CRYPTO_ADDRESS=your_crypto_address

# Optional - Cloud Backup (GitHub)
# Highly recommended for data persistence on free hosting
CLOUD_BACKUP_SERVICE=github
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_BACKUP_REPO=yourusername/your-backup-repo

# Optional - Platform URL (auto-detected for Render, Railway, Replit)
# Only set this if using custom domain
APP_URL=

# Optional - MongoDB (if migrating from old version)
MONGODB_URI=
